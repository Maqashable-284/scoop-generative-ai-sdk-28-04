# =============================================================================
# Scoop GenAI - Environment Variables
# =============================================================================

# Google Gemini API Key (required)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Connection (required for persistence)
# Format: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/scoop_db
MONGODB_DATABASE=scoop_db

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false

# Session Configuration
SESSION_TTL_SECONDS=3600  # 1 hour

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30

# CORS (comma-separated origins)
ALLOWED_ORIGINS=*

# Security
ENABLE_SAFETY_SETTINGS=true
ADMIN_TOKEN=your_admin_token_here

# Week 4: Context Caching (85% token cost reduction)
ENABLE_CONTEXT_CACHING=true
CONTEXT_CACHE_TTL_MINUTES=60
CACHE_REFRESH_BEFORE_EXPIRY_MINUTES=10
CACHE_CHECK_INTERVAL_MINUTES=5

# Gemini Timeout Settings
GEMINI_TIMEOUT_SECONDS=60
MAX_OUTPUT_TOKENS=8192

# =============================================================================
# Braintrust Evals (https://braintrust.dev)
# =============================================================================
# Get your API key at: https://braintrust.dev/app/settings?subroute=api-keys
BRAINTRUST_API_KEY=your_braintrust_api_key_here
BRAINTRUST_PROJECT=Scoop AI Evals
